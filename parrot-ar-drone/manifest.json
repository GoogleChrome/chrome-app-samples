{
  "manifest_version": 2,
  "version": "0.2",
  "name": "Drone Controller Sample",
  "app": {
    "background": {
      "scripts": ["main.js"]
    }
  },
  "permissions": ["system.network"],
  "sockets": {
    "udp": {
      "bind": ":5554",
      "send": ":5554",
      "bind": ":5556",
      "send": ":5556",
      "bind": ":5559",
      "send": ":5559",
    },
    "tcp": {
      "connect": "*:5555",
      "listen": "*:5555",
    }
  }
}
